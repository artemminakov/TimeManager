<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="#3f638b">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewStatisticsFragmentHeader"
        android:text="Статистика"
        android:textSize="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/items_statistics"
        android:id="@+id/spinner_StatisticsFragment"
        android:background="@android:color/transparent"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="35dp"
        android:paddingLeft="15dp"
        android:paddingTop="15pt"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/execute_task"
        android:id="@+id/textViewStatisticsFragmentExecutionTasks"
        android:paddingTop="15pt"
        android:textSize="25dp"
        android:paddingLeft="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/textViewStatisticsFragmentExecutionTasksCount"
        android:textSize="25dp"
        android:paddingLeft="130dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/overdue_task"
        android:id="@+id/textViewStatisticsFragmentOverdueTasks"
        android:paddingTop="15pt"
        android:textSize="25dp"
        android:paddingLeft="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textViewStatisticsFragmentOverdueTasksCount"
        android:textSize="25dp"
        android:paddingLeft="130dp" />


</LinearLayout>